<% @code.methods.each do |m| -%>
<h2><%=m.name%></h2>
<% if m.description -%>
<p><%=m.description%></p>
<% end -%>
<!-- diagram -->
<table>
<tbody>
<% unless m.inputs.fields.empty? -%>
<tr><th colspan="2">inputs:</th></tr>
<tr>
	<th>field</th>
	<th>description</th>
</tr>
<% end -%>
<% m.inputs.fields.each do |f| -%>
<tr>
	<td><%=f.name%></td>
	<td><%=f.description%></td>
</tr>
<% end -%>
<% unless m.outputs.fields.empty? -%>
<tr><th colspan="2">outputs:</th></tr>
<tr>
	<th>field</th>
	<th>description</th>
</tr>
<% end -%>
<% m.outputs.fields.each do |f| -%>
<tr>
	<td><%=f.name%></td>
	<td><%=f.description%></td>
</tr>
<% end -%>
</tbody>
</table>
<% end -%>
<%#
<h2>meta data</h2>
<pre><code><%=show_ruby @wsdl.contents % ></code></pre>
<p>
  <b>Schemas</b> <small>[<%= link_to 'New', new_xsd_path % >]</small><br />
</p>
%>

